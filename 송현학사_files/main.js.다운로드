// 생년월일 입력 포멧 YYYY-MM-DD 하이폰 생성 및 제거
function formatBirth(element) {
    element.value = element.value.replace(/[^0-9]/g, '');
    let value = element.value;
    if (value.length > 6) {
        value = value.slice(0, 6) + '-' + value.slice(6, 8);
    }
    if (value.length > 4) {
        value = value.slice(0, 4) + '-' + value.slice(4);
    }
    element.value = value;
    if (element.inputType === 'deleteContentBackward') {
        if (value.length === 7) {
            element.value = value.slice(0, 6);
        } else if (value.length === 5) {
            element.value = value.slice(0, 4);
        }
    }
}

// 생년월일 유효 날짜 체크 (1900년~)
function validateBirth(value) {
    if (value.length !== 10) return false;
    if (value[4] !== '-' || value[7] !== '-') return false;

    const year = parseInt(value.slice(0, 4), 10);
    const month = parseInt(value.slice(5, 7), 10);
    const day = parseInt(value.slice(8, 10), 10);

    const currentYear = new Date().getFullYear();
    if (year < 1900 || year > currentYear) return false;
    if (month < 1 || month > 12) return false;

    const daysInMonth = new Date(year, month, 0).getDate();
    if (day < 1 || day > daysInMonth) return false;

    return true;
}

function validEmail(val) {
    var regExp = /^[0-9a-zA-Z-_\\.]*([0-9a-zA-Z])*@[0-9a-zA-Z]([-_\\.]?[0-9a-zA-Z])*\.[a-zA-Z]{2,6}$/i;
    return regExp.test(val);
}

